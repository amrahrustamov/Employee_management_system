@model Employee_management_system.Database.Models.Employeer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Edit Employee</h2>
            <form enctype="multipart/form-data" asp-controller="Home" asp-action="EditEmployee" smethod="POST" id="submit-form">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="surname">Surname</label>
                    <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter surname" value="@Model.Surname">
                </div>
                <div class="form-group">
                    <label for="fatherName">Father Name</label>
                    <input type="text" class="form-control" id="fatherName" name="fatherName" placeholder="Enter father name" value="@Model.FatherName">
                </div>
                <div class="form-group">
                    <label for="pinCode">PIN Code</label>
                    <input type="text" class="form-control" id="pinCode" name="pinCode" placeholder="Enter PIN code" value="@Model.PINcode">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label for="photo">Photo</label>
                    <input type="file" class="form-control-file" id="photo" name="photo" value="@Model.Photo">
                </div>
                <div class="form-group">
                    <label for="department">Department</label>
                    <input type="text" class="form-control" id="department" name="department" placeholder="Enter department" value="@Model.Departament">
                </div>
                <button type="submit" class="btn btn-success">Save</button>
            </form>
        </div>
    </div>
</div>